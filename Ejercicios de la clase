// Objetos literales y optional chaiting operator

const frutas = ["pera", "manzana", "sandia"];

console.log(frutas[1])

// Objetos literales, no indexados
const animal = {
  color: "naranja",
  nombre: "simba",
  rugiendo: true
}

console.log("Este le√≥n es de color " + animal.color)
console.log("y su nombre es: " + animal.nombre)

console.log(animal["rugiendo"])

